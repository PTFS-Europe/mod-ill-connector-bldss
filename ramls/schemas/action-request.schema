{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Action request",
  "description": "An action request",
  "properties": {
    "actionName": {
      "description": "The name of the action being performed",
      "type": "string"
    },
    "actionMetadata": {
      "description": "The arbitrary metadata relating to the action",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["actionName","actionMetadata"]
}
